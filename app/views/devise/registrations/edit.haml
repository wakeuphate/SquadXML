= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-signin' }) do |f|
  %h2.form-signin-heading
    Edit #{resource_name.to_s.humanize}
  = f.error_notification
  = f.input :email, :required => true, :autofocus => true, :input_html => { :class => 'input-block-level' }
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %p
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  = f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, :input_html => { :class => 'input-block-level' }
  = f.input :password_confirmation, :required => false, :input_html => { :class => 'input-block-level' }
  = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, :input_html => { :class => 'input-block-level' }
  = f.button :submit, "Update", :input_html => { :class => 'btn btn-large btn-primary'}
  %h2.form-signin-heading Cancel my account
  %br/
  %p
    Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}
  = link_to "Back", :back