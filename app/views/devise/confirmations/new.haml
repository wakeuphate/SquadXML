= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'form-signin'}) do |f|
  %h2.form-signin-heading Resend confirmation instructions
  = f.error_notification
  = f.full_error :confirmation_token
  = f.input :email, :required => true, :autofocus => true, :input_html => { :class => 'input-block-level' }
  = f.button :submit, "Resend confirmation instructions", :input_html => { :class => 'btn btn-large btn-primary'}
  = render "devise/shared/links"
