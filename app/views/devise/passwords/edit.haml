= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-signin' }) do |f|
  %h2.form-signin-heading Change password
  = f.error_notification
  = f.input :reset_password_token, :as => :hidden
  = f.full_error :reset_password_token
  = f.input :password, :label => "New password", :required => true, :autofocus => true, :input_html => { :class => 'input-block-level' }
  = f.input :password_confirmation, :label => "Confirm your new password", :required => true, :input_html => { :class => 'input-block-level' }
  = f.button :submit, "Change my password", :input_html => { :class => 'btn btn-large btn-primary'}
  = render "devise/shared/links"